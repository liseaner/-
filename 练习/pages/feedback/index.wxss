page {
    background-color: #ddd9d9;
  }
  .fb_main {
    padding: 10rpx;
    color: #666;
  }
  .fb_main .fb_title {
    font-size: 30rpx;
   
  }
  .fb_main .fb_tips {
    display: flex;
    flex-wrap: wrap;
  }
  .fb_main .fb_tips text {
    background-color: #fff;
  width: 30%;
    padding: 10rpx;
    text-align: center;
    margin: 20rpx 10rpx;
    font-size: 28rpx;
    /* color: red; */
  }
  .fb_content{
      background-color: #fff;
      margin-top: 20rpx;
      padding: 10rpx;
  }
  .fb_tool{
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 30rpx;
  }
  .fb_tool button{
      width: 100rpx;
      height: 100rpx;
      margin: 0;
      font-size: 40rpx;
      padding:0;
      display: flex;
      justify-content:center;
      align-items: center;
      margin-left: 20rpx;
      margin-top:20rpx;
      border: 1px solid #ccc;
      color: #ccc;
  }
  .form_btn_wrap{
      margin-top: 20rpx;
      display: flex;
      justify-content: flex-end;
  }
  .form_btn_wrap button{
     background-color: var(--themeColor);
     color: #fff;
     font-size: 30rpx;
     width: 30%;
     margin: 0;
  }
  icon{
    vertical-align: middle;
 }
